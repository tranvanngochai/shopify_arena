{% layout none %}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="viewport-fit=cover, width=device-width,initial-scale=1, user-scalable=0">
  <meta name="google" content="notranslate">
  <title>{{- 'password.title' | t -}}</title>

  <link href="{{ 'main_style.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">
  <link href="{{ 'password.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">


  <style type="text/css">
    #powered {
      color: #9c9c9c;
      display: block;
      margin-top: 15px;
    }

    #powered a {
      background-repeat: no-repeat;
      background-image: url(data:image/png;base64,);
      padding-left: 21px;
      color: #9c9c9c;
      text-decoration: none;
    }

    #powered a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body class="templatePassword text-color-{{settings.password_text_style}}">
  <div class="container">
    <div id="login">

      <div class="page-heading">
        <h1 class="title">{{- 'password.title' | t -}}</h1>
        <p class="subtitle">{{- 'password.subtitle' | t -}}</p>
        {% if shop.password_message and shop.password_message != '' %}
          <p class="shop-password-message">{{ shop.password_message }}</p>
        {% endif %}
      </div>

      {% form 'storefront_password' %}
        {{ form.errors | default_errors }}
        <label for="password">{{ "password.enter_password" | t }}</label>
        <div id="form__password" class="form-control">
          <input type="password" name="password" id="password" autofocus />
          <div class="actions">
            <input class="btn" name="commit" type="submit" value="{{ 'password.enter' | t }}" />
          </div>
        </div>
      {% endform %}
      <div id="powered">{{ 'password.shopify_store' | t }}<a href="//www.shopify.com" target="_blank" rel="nofollow">{{ 'password.shopify' | t }}</a></div>
    </div>
  </div>
</body>
</html>