<div class="container popular_categori-container">
    <div class="popular_categori__heading">
        <h1>{{section.settings.heading}}</h1>
    </div>
    <div class="popular_categori__listitem">
        {%- for block in section.blocks -%}
        <div class="popular_categori--item">
            <div class="popular_categori--item-icon">
                <a href="">
                    <i class="{{block.settings.icon}}"></i>
                </a>
            </div>
            <div class="popular_categori--item-title">
                <p>{{block.settings.title}}</p>
            </div>
        </div>
        {%- endfor -%}
    </div>
    <div class="popular_categori__showall">
        <a href="">
            <p>Show all</p>
        </a>
    </div>
</div>


{% schema %}
{
    "name": "Popular categori section",
    "settings": [
        {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Popular categories"
        }
    ],
    "blocks":[
        {
          "type": "Block_Item",
          "name": "Item",
          "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "textarea",
            "id": "title",
            "label": "Title"
          }
          ]
      }
        
    ],
    "presets": [
        {
            "category": "Advanced layout",
            "name": "Popular categori section"
        }
    ]
}
{% endschema %}