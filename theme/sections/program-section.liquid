<div class="container-fluid program-container" style="background-color: {{section.settings.background_color}}">
    {%- for block in section.blocks -%}
           {% render 'snippets-program-section', block:block %}
    {%- endfor -%}
</div>



{% schema %}
{
    "name": "Program section",
    "settings": [
        {
            "type": "color",
            "id": "background_color",
            "label": "Background color",
            "default": "#fff"
        }

    ],
    "blocks":[
        {
            "type": "block_item",
            "name": "Item",
            "settings": [
                {
                    "type": "text",
                    "id": "icon",
                    "label": "icon"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "text"
                }
                
            ]
        }
    ],
    "presets": [
        {
            "category": "Advanced layout",
            "name": "Program section"
        }
    ]
}
{% endschema %}