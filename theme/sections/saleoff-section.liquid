<div class="container saleoff_container">
    {%- for block in section.blocks -%}
        <div class="saleoff__item">
        <div class="saleoff__item-img">
            <img src="{{ block.settings.img_saleoff | img_url : 'master' }}" alt="" >
        </div>
        <div class="saleoff__item-caption">
            <div class="saleoff__item-caption_text">
                <h1>{{block.settings.heading}}</h1>
            </div>
        </div>
        <div class="saleoff__item-btn">
            <a href="">
                <button>{{block.settings.button}}</button>
            </a>
        </div>     
    </div>
    {%- if forloop.length == 1 -%}
      {%- style -%}
        .saleoff_container{
            grid-template-columns: auto;
        }
        .saleoff__item{
            margin: auto;
        }
      {%- endstyle -%}
    {%- elsif forloop.length == 2 -%}
      {%- style -%}
        .saleoff_container{
            grid-template-columns: auto auto;
        }
        .saleoff__item-img img{
            width: 100%;
        }
      {%- endstyle -%}
    {%- endif -%}
    {%- endfor -%}
</div>







{% schema %}
{
    "name": "Saleoff section",
    "settings": [
        {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Saleoff"
        }
    ],
    "blocks":[
        {
            "type": "block_saleoff",
            "name": "Sale Off",
            "settings": [
            {
                "type": "image_picker",
                "label": "Image SaleOff",
                "id": "img_saleoff"
            },
            {
                "type": "richtext",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "button",
                "label": "Button Text",
                "default" : "More"
            }

            ]
        }
        
    ],
    "presets": [
        {
            "category": "Advanced layout",
            "name": "Saleoff section"
        }
    ]
}
{% endschema %}